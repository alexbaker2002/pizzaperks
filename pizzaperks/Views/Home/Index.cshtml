</section>

<section class="ftco-section" id="Order">
	<div class="container">
		<div class="row justify-content-center mb-5 pb-3">
			<div class="col-md-7 heading-section ftco-animate text-center">
				<h2 class="mb-4">Hot Pizza Meals</h2>
				<p>Our pizzas are baked via wodden stove ovens to ensure proper and consistent heat is applied to our pies.</p>
			</div>
		</div>
	</div>
	<div class="container-wrap">
		<div class="row no-gutters d-flex justify-content-center">
			
			@foreach(var (index, item) in Model.Products.Select((item, index) => (index,item)))
			{
				<div class="col-sm-12 col-md-6 col-lg-6 col-xl-4 d-flex ftco-animate ">
					<div class="services-wrap d-flex">
						<a href="#" class="img" style="background-image: url(images/pizza-@(index).jpg);"></a>
						<div class="text p-4">
								<h3>@item.Name</h3>
								<p>@item.Description</p>
								<p class="price"><span>$@item.Cost</span> <a asp-controller="Cart" asp-action="AddItem" asp-route-id="@item.Id" class="ml-2 btn btn-white btn-outline-white">Add To Cart</a></p>
						</div>
					</div>
				</div>
			}
			<div class="col-lg-12 d-flex ftco-animate">
				<div class="services-wrap d-inline-flex">
					<div class="text p-4 w-100">
						<h3>Ingredients:</h3>
						<div class="row row-cols-4 px-2">
							@foreach (Ingredient extra in Model.Ingredients)
							{
								<div class="col">
								<p>@extra.Name ........ $@extra.Cost.ToString("0.00")</p>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


</section>

